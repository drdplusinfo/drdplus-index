{
  "name": "drd-plus/index",
  "license": "MIT",
  "type": "page",
  "description": "List of Drd+ rules and related sites",
  "keywords": [
    "Drd plus",
    "rules",
    "sites"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-html-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-update-cmd": [
      "cd $PWD/vendor/drd-plus/rules-html-skeleton && git checkout *.css"
    ],
    "pre-install-cmd": [
      "cd $PWD/vendor/drd-plus/rules-html-skeleton && git checkout *.css"
    ],
    "pre-autoload-dump": [
      "mkdir -p $PWD/Tests/",
      "cp -r $PWD/vendor/drd-plus/rules-html-skeleton/Tests/* $PWD/Tests/",
      "echo '*' > $PWD/Tests/.gitignore",
      "rm -fr ./images/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/images/generic ./images/generic",
      "rm -fr ./css/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/css/generic ./css/generic",
      "rm -fr ./js/generic && ln -s ../vendor/drd-plus/rules-html-skeleton/js/generic ./js/generic"
    ],
    "post-update-cmd": [
      "./vendor/drd-plus/rules-html-skeleton/bin/assets --dir=css"
    ],
    "post-install-cmd": [
      "rm -f cache/pages/*",
      "./vendor/drd-plus/rules-html-skeleton/bin/assets --dir=css"
    ]
  }
}

{
  "name": "drd-plus/index",
  "license": "MIT",
  "type": "page",
  "description": "List of Drd+ rules and related sites",
  "keywords": [
    "Drd plus",
    "rules",
    "sites"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "drd-plus/rules-skeleton": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "roave/security-advisories": "dev-master",
    "mockery/mockery": "~1.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "rm -f DrdPlus/Tests/RulesSkeleton && ln -s ../../vendor/drd-plus/rules-skeleton/DrdPlus/Tests/RulesSkeleton DrdPlus/Tests/",
      "rm -fr ./css/generic && cp -r ./vendor/drd-plus/rules-skeleton/css/generic ./css/",
      "rm -fr ./images/generic && cp -r ./vendor/drd-plus/rules-skeleton/images/generic ./images/",
      "rm -fr ./js/generic && cp -r ./vendor/drd-plus/rules-skeleton/js/generic ./js/",
      "find ./cache -mindepth 2 -type f -exec rm {} +",
      "find ./vendor -type d -name .git -exec rm -fr {} +",
      "cp ./vendor/drd-plus/rules-skeleton/google8d8724e0c2818dfc.html .",
      "cp ./vendor/drd-plus/rules-skeleton/phpunit.xml.dist ."
    ],
    "post-update-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ],
    "post-install-cmd": [
      "php ./vendor/bin/assets --css --dir=css"
    ]
  }
}

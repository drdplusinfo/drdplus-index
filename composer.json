{
  "name": "drd-plus/index",
  "license": "MIT",
  "type": "page",
  "description": "List of Drd+ rules and related sites",
  "keywords": [
    "Drd plus",
    "rules",
    "sites"
  ],
  "autoload": {
    "psr-4": {
      "DrdPlus\\": "DrdPlus/"
    }
  },
  "require": {
    "php": ">=7.1",
    "roave/security-advisories": "dev-master",
    "granam/string": "dev-master",
    "drd-plus/rules-html-skeleton": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-autoload-dump": [
      "mkdir -p $PWD/Tests/",
      "cp -r $PWD/vendor/drd-plus/rules-html-skeleton/Tests/* $PWD/Tests/",
      "echo '*' > $PWD/Tests/.gitignore",
      "rm -fr $PWD/images/generic && ln -s $PWD/vendor/drd-plus/rules-html-skeleton/images/generic $PWD/images/generic",
      "rm -fr $PWD/css/generic && ln -s $PWD/vendor/drd-plus/rules-html-skeleton/css/generic $PWD/css/generic",
      "rm -fr $PWD/js/generic && ln -s $PWD/vendor/drd-plus/rules-html-skeleton/js/generic $PWD/js/generic"
    ]
  }
}
